<Window x:Class="RhDevConfigTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns:local="clr-namespace:RhDevConfigTool" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="RhDevConfigTool" Height="700" Width="700"
        DataContext="{Binding Source={StaticResource Locator},Path=Main}" 
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button"
        BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="pu:ButtonHelper.ButtonStyle" 
            Value="Outline"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=(pu:ButtonHelper.ButtonStyle),RelativeSource={RelativeSource Self}, Mode=OneWay}"
                    Value="Outline">
                        <Setter Property="pu:ButtonHelper.CornerRadius"
                    Value="15"/>
                        <Setter Property="pu:ButtonHelper.ClickStyle"
                    Value="Sink"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
        </Window.Resources>
    <Viewbox>
        <Canvas Height="700" Width="700">
    <Grid>
        <!--通讯设置 左-->
        <Grid Grid.Column="0" Grid.Row="0">
            
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock Text="本地通讯配置" FontSize="30" Height="35" Margin="10,0,0,0"></TextBlock>
            </StackPanel>
            <ScrollViewer Height="600"
                  Width="300"
                  Grid.Row="1"
                  pu:ScrollViewerHelper.ScrollBarThickness="10"
                  pu:ScrollViewerHelper.ScrollBarCornerRadius="1">
                <StackPanel x:Name="LocalConfig" Orientation="Vertical" Width="auto" Height="auto">
                    <GroupBox
                        Width="300"
                        Header="Udp通讯配置"
                        Visibility="{Binding LocalConnConfigUdp}"    
                        pu:GroupBoxHelper.HeaderPadding="5,10"
                        pu:GroupBoxHelper.Icon="&#xf0c1;">

                        <StackPanel Orientation="Vertical">
                            <StackPanel  Orientation="Horizontal">
                                <ComboBox
                              ItemsSource="{Binding NetAdapterList}" 
                              Margin="10,0,10,0"
                              Height="25"
                              Width="220"
                              SelectedValue="{Binding AdapterDescript}"
                              pu:ComboBoxHelper.Header="适配器 : "
                              pu:ComboBoxHelper.ItemHeight="25"
                              pu:ComboBoxHelper.Icon="&#xf03a;" >
                                                </ComboBox>
                                                <Button x:Name="Adapter"
                             Command="{Binding FlushNetworkCard}"           
                             Grid.Row="2"       
                            Content="刷新"      
                            pu:ButtonHelper.ButtonStyle="Outline"
                            pu:ButtonHelper.CornerRadius="15"
                            Height="25"
                            Width="50"></Button>
                            </StackPanel>
                            <DataGrid
                                x:Name="da1"
                                Width="300"
                                Height="280"
                                FontSize="13"
                                AutoGenerateColumns="False"
                                ItemsSource="{Binding DeviceInfos}"
                               pu:DataGridHelper.HeaderPadding="5,0"
                                pu:DataGridHelper.HeaderMinHeight="25"
                                pu:DataGridHelper.RowMinHeight="20"
                               pu:DataGridHelper.CellPadding="5,0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding Path=DoubleClickItem}" CommandParameter="{Binding ElementName=da1,Path=SelectedValue}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="设备名" Width="70" Binding="{Binding strName}" />
                                    <DataGridTextColumn Header="设备IP" Width="110" Binding="{Binding strIpAddress}"/>
                                    <DataGridTextColumn Header="MAC地址" Width="120" Binding="{Binding strMacAddress}" />

                                </DataGrid.Columns>

                            </DataGrid>
                            <Button x:Name="Search"
                                 Grid.Row="2"       
                                Content="搜索设备" 
                                Command="{Binding SearchDevices}"
                                pu:ButtonHelper.ButtonStyle="Outline"
                                pu:ButtonHelper.CornerRadius="15"
                                Height="30"
                                Width="150"></Button>
                                </StackPanel>
                        </GroupBox>
                    <!--本地串口信息显示-->
                    <GroupBox Height="145"     
                     Width="300"
                    Header="本地串口设置"
                    Visibility="{Binding LocalConnConfigSerialPort}" 
                     pu:GroupBoxHelper.HeaderPadding="5,10"
                    pu:GroupBoxHelper.Icon="&#xf0c1;">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Height="25"
                                          x:Name="SerialPortSelect"
                        Margin="40,0,20,0"          
                        Width="200"
                        ItemsSource="{Binding SerialPortsName}"           
                        SelectedValue ="{Binding LocalSerialPortConfig_SerialPortOrder}"         
                        IsEnabled="{Binding LocalSerialPortConfigEnable}"      
                        pu:ComboBoxHelper.Header="串口选择 : "
                        pu:ComboBoxHelper.ItemHeight="25"
                        pu:ComboBoxHelper.CornerRadius="15">
                                    <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseEnter">
                                        <i:InvokeCommandAction Command="{Binding Path=GetCanUseSerialPorts}" CommandParameter="{Binding ElementName=SerialPortSelect}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox Height="25"
                        Margin="40,0,20,0"          
                        Width="200"
                        IsEnabled="{Binding LocalSerialPortConfigEnable}" 
                        SelectedValue="{Binding LocalSerialPortConfig_Baud}"          
                        pu:ComboBoxHelper.Header="波特率    : "
                        pu:ComboBoxHelper.ItemHeight="25"
                        pu:ComboBoxHelper.CornerRadius="15">
                                    <ComboBoxItem Content="1200"></ComboBoxItem>
                                    <ComboBoxItem Content="2400"></ComboBoxItem>
                                    <ComboBoxItem Content="4800"></ComboBoxItem>
                                    <ComboBoxItem Content="9600"></ComboBoxItem>
                                    <ComboBoxItem Content="19200"></ComboBoxItem>
                                    <ComboBoxItem Content="38400"></ComboBoxItem>
                                    <ComboBoxItem Content="57600"></ComboBoxItem>
                                    <ComboBoxItem Content="115200" IsSelected="True"></ComboBoxItem>
                                    <ComboBoxItem Content="230400"></ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Height="30"
                        Margin="40,0,20,0"         
                        Width="200"
                        IsChecked="{Binding SerialPortIsChecked}"         
                        pu:CheckBoxHelper.Header="串口开关 : "
                        pu:CheckBoxHelper.CheckBoxStyle="Switch"/>
                                    </StackPanel>
                                </StackPanel>
                    </GroupBox>
                    <!--加载或保存配置文件-->
                    <GroupBox Height="80"     
                     Width="300"
                    Header="配置文件"
                    Visibility="{Binding ConfigFilesHide}" 
                     pu:GroupBoxHelper.HeaderPadding="5,10"
                    pu:GroupBoxHelper.Icon="&#xf0c1;">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="LoadConfigBtn"
                            Command="{Binding LoadConfigBtn}"   
                            Content="加载配置文件"      
                             pu:ButtonHelper.ButtonStyle="Outline"
                             pu:ButtonHelper.CornerRadius="15"
                             Margin="35,0,0,0"       
                             Height="30"
                             Width="100"></Button>
                            <Button x:Name="SaveConfigBtn"
                            Command="{Binding SaveConfigBtn}"   
                            Content="保存配置文件"      
                             pu:ButtonHelper.ButtonStyle="Outline"
                             pu:ButtonHelper.CornerRadius="15"
                             Margin="20,0,0,0"       
                             Height="30"
                             Width="100"></Button>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="600"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
        <!--参数配置 右-->
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid>
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBlock Text="{Binding DeviceCanConfigParameters}" FontSize="30" Height="35" Margin="10,0,0,0"></TextBlock>
                    <Button Height="40"
                        Width="40"
                        pu:ButtonHelper.Icon="&#xf063;"
                        pu:ButtonHelper.ButtonStyle="Outline"
                        pu:ButtonHelper.CornerRadius="15"/>
                </StackPanel>
                <ScrollViewer Height="550"
                  Width="380"
                  Grid.Row="1"
                  pu:ScrollViewerHelper.ScrollBarThickness="10"
                  pu:ScrollViewerHelper.ScrollBarCornerRadius="1">
                    <StackPanel x:Name="ConfigList" Orientation="Vertical" Width="auto" Height="auto">
                        <GroupBox
                        Width="370"
                        Header="通用设备参数配置"
                        Visibility="{Binding DevConfigHide}"    
                        pu:GroupBoxHelper.HeaderPadding="5,10"
                        pu:GroupBoxHelper.Icon="&#xf10b;">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Visibility="{Binding DevConfigHide_DeviceId}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             x:Name="DevConfig_DeviceId_CheckName"
                                             Text="{Binding DevConfig_DeviceId}"
                                             pu:TextBoxHelper.Header="设备ID         : "
                                             pu:TextBoxHelper.CornerRadius="15">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="MouseLeave">
                                                        <i:InvokeCommandAction Command="{Binding Path=DevConfig_DeviceId_Check}" CommandParameter="{Binding ElementName=DevConfig_DeviceId_CheckName}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </TextBox>
                                            <Button Height="30"
                                            Width="30"
                                            Content="配置"
                                            Command="{Binding Tips_DevConfig_DeviceId}"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="10,0,0,0"
                                            Command="{Binding Tips_DevConfig_DeviceId}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding DevConfigHide_ActiveCode}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding DevConfig_ActiveCode}"
                                             IsEnabled="False"
                                             pu:TextBoxHelper.Header="激活码         : "
                                             pu:TextBoxHelper.CornerRadius="15"/>

                                    <Button Height="30"
                                            Width="30"
                                            Content="激活"
                                            Command="{Binding CreateOneActiveCode}"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="10,0,0,0"
                                            Command="{Binding Tips_DevConfig_ActiveCode}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox
                        Width="370"
                        Header="网络配置-无线AP配置"
                        
                        Visibility="{Binding NetConfigHide}"    
                        pu:GroupBoxHelper.HeaderPadding="5,10"
                        pu:GroupBoxHelper.Icon="&#xf1eb;">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_NetCardName}" IsEnabled="{Binding NetConfigEnabled}">
                                            <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             x:Name="NetConfig_AP_NetCardName_xName"
                                             Text="{Binding NetConfig_AP_NetCardName}"
                                             pu:TextBoxHelper.Header="网卡名称          : "
                                             pu:TextBoxHelper.CornerRadius="15">
                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="TextChanged">
                                                        <i:InvokeCommandAction Command="{Binding Path=NetConfig_AP_NetCardName_xName_TextChanged}" CommandParameter="{Binding ElementName=NetConfig_AP_NetCardName_xName,Path=Text.Length}"/>
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>

                                            </TextBox>

                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_NetCardName}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_BanStation}">
                                            
                                            <CheckBox Height="25"
                                            Margin="30,0,0,0"         
                                            Width="240"
                                            IsChecked="{Binding NetConfig_AP_BanStation_Switch}"
                                            pu:CheckBoxHelper.Header="使能位             : "          
                                            pu:CheckBoxHelper.CheckBoxStyle="Switch"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_BanStation}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_SafeType}" IsEnabled="{Binding NetConfigEnabled}">
                                            <ComboBox Height="25"
                                      Margin="30,0,0,0"        
                                      Width="240" 
                                      ItemsSource="{Binding NetConfig_AP_SafeType_Arr}"        
                                      SelectedValue="{Binding NetConfig_AP_SafeType}"        
                                      pu:ComboBoxHelper.Header="安全类型          : "
                                      pu:ComboBoxHelper.ItemHeight="30"
                                      pu:ComboBoxHelper.CornerRadius="15">
                                            </ComboBox>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_SafeType}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_DhcpStartAddr}" IsEnabled="{Binding NetConfigEnabled}">
                                            <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_AP_DhcpStartAddr}"
                                             pu:TextBoxHelper.Header="DHCP起始地址 : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_DhcpStartAddr}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_DhcpEndAddr}" IsEnabled="{Binding NetConfigEnabled}">
                                            <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_AP_DhcpEndAddr}"
                                             pu:TextBoxHelper.Header="DHCP终止地址 : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_DhcpEndAddr}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_UserName}" IsEnabled="{Binding NetConfigEnabled}">
                                            <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_AP_UserName}"
                                             pu:TextBoxHelper.Header="无线AP账号      : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_UserName}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_AP_Password}" IsEnabled="{Binding NetConfigEnabled}">
                                            <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_AP_Password}"
                                             pu:TextBoxHelper.Header="无线AP密码      : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_AP_Password}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                        </StackPanel>

                                    </StackPanel>
                        </GroupBox>
                        <GroupBox
                        Width="370"
                        Header="网络配置-无线STA设置"
                        Visibility="{Binding NetConfigHide}"    
                        pu:GroupBoxHelper.HeaderPadding="5,10"
                        pu:GroupBoxHelper.Icon="&#xf1eb;">
                            <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_NetCardName}" IsEnabled="{Binding NetConfigStaEnabled}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_STA_NetCardName}"
                                             pu:TextBoxHelper.Header="网卡名称          : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_NetCardName}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_BanStation}" >
                                            <CheckBox Height="25"
                                            Margin="30,0,0,0"         
                                            Width="240"
                                            IsChecked="{Binding NetConfig_STA_BanStation_Switch}"
                                            pu:CheckBoxHelper.Header="使能位             : "          
                                            pu:CheckBoxHelper.CheckBoxStyle="Switch"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_BanStation}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_SafeType}" IsEnabled="{Binding NetConfigStaEnabled}">
                                            <ComboBox Height="25"
                                      Margin="30,0,0,0"        
                                      Width="240"  
                                      ItemsSource="{Binding NetConfig_STA_SafeType_Arr}"        
                                      SelectedValue="{Binding NetConfig_STA_SafeType}" 
                                      pu:ComboBoxHelper.Header="安全类型          : "
                                      pu:ComboBoxHelper.ItemHeight="30"
                                      pu:ComboBoxHelper.CornerRadius="15" SelectionChanged="ComboBox_SelectionChanged">
                                            </ComboBox>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_SafeType}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel >
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_DhcpBanStation}" IsEnabled="{Binding NetConfigStaEnabled}">
                                            <CheckBox Height="25"
                                            Margin="30,0,0,0"         
                                            Width="240"
                                            IsChecked="{Binding NetConfig_STA_DhcpBanStation_Switch}"
                                            pu:CheckBoxHelper.Header="DHCP使能位    : "          
                                            pu:CheckBoxHelper.CheckBoxStyle="Switch"/>
                                            <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_DhcpBanStation}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_UserName}" IsEnabled="{Binding NetConfigStaEnabled}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_STA_UserName}"
                                             pu:TextBoxHelper.Header="无线AP账号      : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_UserName}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_STA_Password}" IsEnabled="{Binding NetConfigStaEnabled}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_STA_Password}"
                                             pu:TextBoxHelper.Header="无线AP密码      : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_STA_Password}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox
                        Width="370"
                        Header="网络配置-网卡IP配置"
                        Visibility="{Binding NetConfigHide}"    
                        pu:GroupBoxHelper.HeaderPadding="5,10"
                        pu:GroupBoxHelper.Icon="&#xf1eb;">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_NetCardName}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_IP_NetCardName}"
                                             pu:TextBoxHelper.Header="网卡名称          : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_IP_NetCardName}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_NetType}">
                                            <ComboBox Height="25"
                                      Margin="30,0,0,0"        
                                      Width="240"
                                      ItemsSource="{Binding NetConfig_IP_NetType_Arr}"
                                      SelectedValue="{Binding NetConfig_IP_NetType}"        
                                      pu:ComboBoxHelper.Header="网络模式          : "
                                      pu:ComboBoxHelper.ItemHeight="30"
                                      pu:ComboBoxHelper.CornerRadius="15">
                                            </ComboBox>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_IP_NetType}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_Addr}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_IP_Addr}"
                                             pu:TextBoxHelper.Header="IP地址              : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_IP_Addr}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_NetMask}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_IP_NetMask}"
                                             pu:TextBoxHelper.Header="子网掩码          : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_IP_NetMask}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_GateWay}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
                                             Text="{Binding NetConfig_IP_GateWay}"      
                                             pu:TextBoxHelper.Header="网关                 : "
                                             pu:TextBoxHelper.CornerRadius="15"/>
                                    <Button Height="30"
                                            Width="30"
                                            Margin="40,0,0,0"
                                            Command="{Binding Tips_IP_GateWay}"
                                            pu:ButtonHelper.Icon="&#xf12a;"
                                            pu:ButtonHelper.ButtonStyle="Outline"
                                            pu:ButtonHelper.CornerRadius="15"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding NetConfigHide_IP_Dns}">
                                    <TextBox Height="25"
                                             Width="240"
                                             Margin="30,0,0,0"
